 body {
   margin: 10, 10. 0;
   padding: 0;
   background: url(<%= asset_path 'background.jpg' %>);
   background-size: cover;

 }


 .nav ul {
   background-color: rgba(35, 80, 155. 0.8);
   text-align: center;
   padding: 0;
   margin: 0;
 }
 .nav li {
   font-family: 'Oswald', sans-serif;
   font-size: 1em;
   line-height: 20px;
   height: 20px;
   display: inline-block;
 }

 .nav a {
   text-decoration: none;
   font-weight: bold;
   color: #aaa;
   display: inline-block;
   transition: .3s background-color;
 }

 .nav a:hover {
   background-color: #eee;
 }

 .nav a.active {
   background-color: rgba(35, 80, 155. 0.8);
   color: #aaa;
   cursor: default;
 }

 .nav p {
   color: #aaa;
 }

 @media screen and (min-width: 600px) {
   .nav li {
     width: 120px;
     border-bottom: none;
     height: 50px;
     line-height: 50px;
     font-size: 1.4em;
   }

