<section class="todoapp">
	<header class="header">
		<h1>The Chore Cycle</h1>

	</header>

	<section class="main">
		<input class="toggle-all" type="checkbox">
		<label for="toggle-all">Mark all as complete</label>
		<ul class="todo-list">
			<% @user_chores.each do |uc| %>
			<li class="<%= "completed" if uc.complete? %>">
				<div class="view">
					<form action="/">
						<input class="toggle" type="checkbox" <%= "checked='checked'" if uc.complete? %>>
					</form>

					<label><%= uc.chore.name %> --- <%= uc.user.email %></label>
				</div>
			</li>
			<% end %>
		</ul>

	</section>

	<footer class="footer">

	</footer>
</section>
