<section class="todoapp">
	<header class="header">
		<h1><%= @chore.name %></h1>
		<input class="new-todo" placeholder="Add a task to this chore" autofocus>
	</header>

	<section class="main">
		<ul class="todo-list">
			<% @chore.tasks.each do |task| %>
			<li>
				<div class="view">
					<label><%= task.description %></label>
				</div>
			</li>
			<% end %>
		</ul>
	</section>
	<footer class="footer">
	</footer>
</section>
