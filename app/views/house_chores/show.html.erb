<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<section class="todoapp">
	<header class="header">
		<h1><%= @house_chore.chore.name %></h1>
		<%= form_for([@house_chore, @task]) do |f| %>
			<%= f.text_field :description, :class => "new-todo", :placeholder => (@task.errors.full_messages_for(:description).first || "Create a new chore task..." ) %>
			<%= f.submit :class => "hidden" %>
		<% end %>
	</header>

	<section class="main">
		<ul class="todo-list">
			<%= render :collection => @house_chores, :partial => "house_chores/house_chore_li", :as => :house_chore %>
			<%= render partial: "house_chores/house_chores_form", locals: { user_chore: @user_chore, house_chore: @house_chore, users: @users } %>
		</ul>

	</section>

	<footer class="footer">

	</footer>
</section>
